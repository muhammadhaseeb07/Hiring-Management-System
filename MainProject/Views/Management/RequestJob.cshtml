<script src="~/assets/js/popup_management.js"></script>
<script>
    $("#submit").click(function () {
        var obj = new Object();
        obj.Dept_no = $("#depID").val();
        obj.Domain = $("#domain").val();
        obj.Sub__Domain = $("#subdomain").val();
        obj.Experience = $("#experience").val();
        obj.Vacancies = $("#vacancy").val();
        obj.Job_Position = $("#jobPos").val();
        obj.Expected_Joining_Date = $("#Join").val();
        obj.Descriptionn = $("#Descrip").val();
        obj.StatusOfReq = $("#Status").val();

        var Url = '@Url.Action("RequestJob", "Management")';
        $.ajax({
            url: Url,
            data: obj,
            type: 'POST',
            success: function (resp) {
                if (resp != null) {
                    window.location.href = "/Management/ManagementHome";
                } 
            },
            error: function (e) {
                alert("Error");
            }
        });
    });
</script>
