    <div id="generate_request_Modal">
        <div class="modal-content">
            <span class="close">×</span>
            <p>PLEASE GENERATE A REQUEST HERE</p>
            <div class="row">
                <div class="col-md-6 border border-dark" style="margin: 39px;padding: 38px;margin-right: 47px;margin-left: 231px;">
                    <h1>REQUEST FORM</h1>
                    <form style="margin: 0px 0px;width: 400px;">

                        <div class="form-group">
                            <label for="name">Department *</label>
                            <select class="form-control" id="depID" style="margin-left: 0px;">
                                <option value="0" selected>Select</option>
                                <option value="1">Developer</option>
                                <option value="2">QA</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="name">Domain</label>
                            <input class="form-control item" type="text" id="domain">
                        </div>
                        <div class="form-group">
                            <label for="name">Subdomain</label>
                            <input class="form-control item" type="text" id="subdomain">
                        </div>
                        <div class="form-group">
                            <label for="name">Experience</label>
                            <input class="form-control item" type="text" id="experience">
                        </div>
                        <div class="form-group">
                            <label for="name">&nbsp;Vacancies</label>
                            <input class="form-control" type="email" id="vacancy">
                        </div>
                        <div class="form-group">
                            <label for="name">&nbsp;Job Position</label>
                            <input class="form-control" type="email" id="jobPos">
                        </div>
                        <div class="form-group">
                            <label for="name">&nbsp;Expected Join</label>
                            <input class="form-control" type="date" style="height: 109px;" id="Join">
                        </div>
                        <div class="form-group">
                            <label for="name">&nbsp;Description</label>
                            <input class="form-control" type="email" style="height: 109px;" id="Descrip">
                        </div>
                        <div class="form-group">
                            <label for="name">&nbsp;Status of Request</label>
                            <input class="form-control" type="email" style="height: 109px;" id="Status">
                        </div>
                    </form><a id="submit" class="btn btn-primary" >SUBMIT</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
