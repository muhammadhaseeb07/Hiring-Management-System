
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>kavtech(updated pages)</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i" />
    <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css" />
    <link rel="stylesheet" href="~/assets/fonts/simple-line-icons.min.css" />
    <link rel="stylesheet" href="~/assets/css/Dynamic-Table.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css" />
    <link rel="stylesheet" href="~/assets/css/Login-Red.css" />
    <link rel="stylesheet" href="~/assets/css/smoothproducts.css" />
    <style>
        .hide {
            display: none;
        }

        .show {
            display: block;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-dark clean-navbar">
        <div class="container">
            <a class="navbar-brand logo" href="#">KAVTECH - CANDIDATE PORTAL</a><button class="navbar-toggler"
                                                                                        data-toggle="collapse"
                                                                                        data-target="#navcol-1">
                <span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item item" role="presentation">
                        <a class="nav-link" href="index.html">HOME</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info" style="margin-top: 46px;">CANDIDATE - LOGIN</h2>
                <p>PLEASE LOGIN AS CANDIDATE IF YOU ARE ALREADY A MEMBER</p>
            </div>
            <div class="hide" id="error" style="margin-bottom:0; margin-left:310px; color: red">Authentication Falied</div>
        </div>
        <form class="pulse animated" style="padding: 105px;">
            <div class="form-group">
                <label for="email">Username</label><input class="form-control item" type="text" id="username" />
            </div>
            <div class="form-group">
                <label for="password">Password</label><input class="form-control" type="password" id="password" />
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           id="checkbox" /><label class="form-check-label" for="checkbox">Remember me</label>
                </div>
            </div>
            <a class="btn btn-primary btn-block"
               id="submit"
                onclick="candidateLogin()">
                Log In
            </a>
            <h4 class="text-center"
                style="margin-top: 19px;margin-bottom: -14px;color: rgb(0,0,0);">
                OR REGISTER AS OUR MEMBER
            </h4>
            <a class="btn btn-primary btn-block"
               role="button"
               href="Signup"
               style="margin-top: 28px;">SIGN UP</a>
        </form>
    </section>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/smoothproducts.min.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="~/assets/js/bs-animation.js"></script>
    <script src="~/assets/js/Dynamic-Table.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.js"></script>
    <script src="~/assets/js/functions.js"></script>
    <script src="~/assets/js/candidateFunctions.js"></script>
<script type="text/javascript">
    $("#submit").click(function() {
        var obj = new Object();
        obj.username = $("#username").val();
        obj.password = $("#password").val();

        var Url = '@Url.Action("Login", "Home")';
        $.ajax({
            url: Url,
            data: obj,
            type: 'POST',
            success: function (resp) {
                if (resp != null) {
                    window.location.href = "/Candidate/candidateHome";
                } else {
                    alert("Username or Password Incorrect");
                }
            },
            error: function (e) {
                alert("Username or Password Incorrect");
            }
        });
    });
</script>
</body>
</html>
