<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>kavtech(updated pages)</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/assets/css/Dynamic-Table.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="~/assets/css/Login-Red.css">
    <link rel="stylesheet" href="~/assets/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="~/assets/css/popups.css">
    <link rel="stylesheet" href="~/assets/css/smoothproducts.css">
</head>

<body>
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-dark clean-navbar">
        <div class="container">
            <a class="navbar-brand logo" href="#">KAVTECH - EMPLOYEE PORTAL</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item item" role="presentation"><a class="nav-link" href="index.html">HOME</a></li>
                    <li class="nav-item item" role="presentation"><a class="nav-link" href="about-us.html">ABOUT</a></li>
                    <li class="nav-item item" role="presentation"><a class="nav-link" href="contact-us.html">CONTACT US</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info" style="margin-top: 46px;">EMPLOYEE- LOGIN</h2>
                <p>PLEASE GIVE YOUR EMAIL AND PASSWORD TO LOGIN</p>
            </div>
            <form class="pulse animated" style="padding: 105px;">
                <div class="form-group"><label for="email">Username</label><input class="form-control item" type="text" id="username"></div>
                <div class="form-group"><label for="password">Password</label><input class="form-control" type="password" id="password"></div>
                <div class="form-group">
                    <label for="name">Type *</label>
                    <select class="form-control" id="emptype" style="margin-left: 0px;">
                        <option value="0" selected>Management</option>
                        <option value="1">HR</option>
                        <option value="2">Interviewer</option>
                        <option value="3">Team Lead</option>
                    </select>
                </div>
                <a class="btn btn-primary btn-block" id="submit">Log In</a>
            </form>
        </div>
    </section>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="~/assets/js/smoothproducts.min.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="~/assets/js/bs-animation.js"></script>
    <script src="~/assets/js/Dynamic-Table.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.js"></script>
<script src="~/assets/js/popupjs.js"></script>
    <script type="text/javascript">
    $("#submit").click(function() {
        var obj = new Object();
        obj.emptype = $("#emptype").val();
        obj.username = $("#username").val();
        obj.password = $("#password").val();

        var Url = '@Url.Action("EmployeeLogin", "Home")';
        debugger;
        $.ajax({
            url: Url,
            data: obj,
            type: 'POST',
            success: function (resp) {
                if(resp==null)
                    alert(resp);
                else {
                    if (resp != null) {
                        if ($("#emptype").val()==0)
                            window.location.href = "/Management/ManagementHome";
                        else if ($("#emptype").val() == 1)
                            window.location.href = "/HR/HRHome";
                        else if ($("#emptype").val() == 2)
                            window.location.href = "/Interviewer/InterviewerHome";
                        else if ($("#emptype").val() == 3)
                            window.location.href = "/TeamLead/TeamLeadHome";
                    }
                }
            },
            error: function (e) {
                alert('Error: ' + e);
            }
        });
    });
    </script>
</body>

</html>

