	<script type="text/javascript">


		function validation(){

			var fullName = document.getElementById('fullName').value;
			var Fathers_Name = document.getElementById('Fathers_Name').value;
			var CNIC = document.getElementById('CNIC').value;
			var D_O_B_ = document.getElementById('D_O_B_').value;
			var Current_Address = document.getElementById('Current_Address').value;
			var Permanent_Address = document.getElementById('Permanent_Address').value;
			var Home = document.getElementById('Home').value;
			var Mobile = document.getElementById('Mobile').value;
			var Degree = document.getElementById('Degree').value;
			var Duration_of_Degree = document.getElementById('Duration_of_Degree').value;
			var Institute = document.getElementById('Institute').value;
			var Job_ID = document.getElementById('Job_ID').value;
			var companyName = document.getElementById('companyName').value;
			var jobDuration = document.getElementById('jobDuration').value;



			if(fullName == ""){
				document.getElementById('fullNam').innerHTML =" ** Please fill the above field";
				return false;
			}

			if(Fathers_Name == ""){
				document.getElementById('Fathers_Nam').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(CNIC == ""){
				document.getElementById('CNI').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(D_O_B_ == ""){
				document.getElementById('D_O_B').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(Current_Address == ""){
				document.getElementById('Current_Addres').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(Permanent_Address == ""){
				document.getElementById('Permanent_Addres').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(Home == ""){
				document.getElementById('Hom').innerHTML =" ** Please fill the above field";
				return false;
			}

			if(isNaN(Home)){
				document.getElementById('Hom').innerHTML =" ** user must write digits only not characters";
				return false;
			}


			if(Mobile == ""){
				document.getElementById('Mobil').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(isNaN(Mobile)){
				document.getElementById('Mobil').innerHTML =" ** user must write digits only not characters";
				return false;
			}
			if(Mobile.length!=11){
				document.getElementById('Mobil').innerHTML =" ** Mobile Number must be 11 digits only";
				return false;
			}

			if(Degree == ""){
				document.getElementById('Degre').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(Duration_of_Degree == ""){
				document.getElementById('Duration_of_Degre').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(Institute == ""){
				document.getElementById('Institut').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(Job_ID == ""){
				document.getElementById('Job_I').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(companyName == ""){
				document.getElementById('companyNam').innerHTML =" ** Please fill the above field";
				return false;
			}
			if(jobDuration == ""){
				document.getElementById('jobDuratio').innerHTML =" ** Please fill the above field";
				return false;
			}
		}

		$("#submit").click(function() {
			

			var obj = new Object();
			obj.Fathers_Name = $("#fatherName").val();
			obj.DOB = $("#DOB").val();
			obj.Gender = $("#gender").val();
			obj.CNIC = $("#CNIC").val();
			obj.Permanent_Address = $("#Permanent_Address").val();
			obj.Current_Address = $("#Current_Address").val();
			obj.username = $("#username").val();
			obj.First_Name = $("#firstName").val();
			obj.Last_Name = $("#lastName").val();
			obj.Job_ID = $("#JobId").val();
			obj.Email = $("#email").val();
			obj.Experience = $("#experience").val();
			obj.password1 = $("#password").val();
			obj.CGPA = $("#CGPA").val();
			obj.Institute = $("#Institute").val();
			obj.Duration_of_Degree = $("#Duration_of_Degree").val();
			obj.Degree = $("#Degree").val();
			obj.Mobile = $("#Mobile").val();
			obj.Home = $("#Home").val();

			var Url = '@Url.Action("Signup", "Home")';
			debugger;
			$.ajax({
				url: Url,
				data: obj,
				type: 'POST',
				success: function (resp) {
					if(resp == null)
						alert(resp);
				},
				error: function (e) {
					alert("Kindly Sign up properly");
				}
			});

		});

		
	</script>
