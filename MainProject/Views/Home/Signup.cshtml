	<main class="page registration-page"></main>
	<div>
		<div class="container">
			<div class="hide" id="error" style="margin-bottom:0; color: red"></div>
		</div>
		<div class="row" data-aos="fade-up" style="padding: 18px;">
			<div class="col-md-6 border border-primary" style="margin: 0px;padding: 37px;height: 700px;">
				<h1>Personal Info</h1>
				<form style="margin: 0px 0px;width: 400px;">
					<div class="form-group"><label for="name">First Name *</label><input class="form-control item" type="text" id="firstName"><span id="fullNam" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Last Name *</label><input class="form-control item" type="text" id="lastName"><span id="fullNam" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Father's Name *</label><input class="form-control item" type="text" id="fatherName"><span id="Fathers_Nam" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">CNIC *</label><input class="form-control item" type="number" id="CNIC"><span id="CNIC" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="email">Date Of Birth *</label><input class="form-control" type="date" id="DOB"><span id="DOB" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group">
						<label for="name">Gender *</label>
						<div>
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" id="gender" value="M"><label class="form-check-label" for="formCheck-1">Male</label>
								<input class="form-check-input" type="radio" id="gender" value="F"><label class="form-check-label" for="formCheck-2">Female</label>
							</div>
						</div>
					</div>
					<div class="form-group"><label for="name">Email *</label><input class="form-control item" type="text" id="email"><span id="fullNam" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Username *</label><input class="form-control item" type="text" id="username"><span id="fullNam" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Password *</label><input class="form-control item" type="password" id="password"><span id="fullNam" class="text-danger font-weight-bold"> </span></div>

				</form>
			</div>
			<div class="col-md-6 border border-dark" style="margin: 0px;padding: 38px">
				<h1>Contact Info</h1>
				<form style="margin: 0px 0px;width: 400px;">
					<div class="form-group"><label for="name">Current Address *</label><input class="form-control item" type="text" id="Current_Address"><span id="Current_Address" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Permanent Address *</label><input class="form-control item" type="text" id="Permanent_Address"><span id="Permanent_Address" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Home Phone *</label><input class="form-control item" type="number" min="0" max="11" id="Home"><span id="Hom" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Mobile Phone *</label><input class="form-control item" type="number" min="0" max="11" id="Mobile"><span id="Mobile" class="text-danger font-weight-bold"> </span></div>
				</form>
			</div>
		</div>
		<div class="row" data-aos="fade-up" style="margin-bottom: 31px;padding: 18px;">
			<div class="col-md-6 border border-dark" style="margin: 0px;padding: 38px">
				<h1>Education</h1>
				<form style="margin: 0px 0px;width: 400px;">
					<div class="form-group"><label for="name">&nbsp;Degree Title *</label><input class="form-control item" type="text" id="Degree"><span id="Degre" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Duration *</label><input class="form-control item" type="text" id="Duration_of_Degree"><span id="Duration_of_Degre" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">Institute Name *</label><input class="form-control item" type="text" id="Institute"><span id="Institut" class="text-danger font-weight-bold"> </span></div>
					<div class="form-group"><label for="name">CGPA *</label><input class="form-control" type="number" min="0" max="4" step="0.01" id="CGPA"><span id="CGP" class="text-danger font-weight-bold"> </span></div>
				</form>
			</div>
			<div class="col-md-6 border border-primary" style="margin: 0px;padding: 38px">
				<h1>Professional Experence</h1>
				<form style="margin: 0px 0px;width: 400px;">
					<div class="form-group">
						<label for="name">Job Title *</label>
						<select class="form-control" id="JobId" style="margin-left: 0px;">
							<option value="0" selected>Select</option>
							<option value="1">Developer</option>
							<option value="2">QA</option>
						</select>
					</div>
					<div class="form-group"><label for="name">Experience</label><textarea class="form-control item" type="text" id="experience"></textarea><span id="companyName" class="text-danger font-weight-bold"> </span></div>
				</form>
			</div>
		</div>
	</div>
<footer class="page-footer dark">
